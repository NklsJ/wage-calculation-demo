{
  "name": "wage-calculation-demo",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "flow-bin": "^0.97.0"
  },
  "dependencies": {
    "moment": "^2.24.0",
    "moment-business-time": "^0.7.1",
    "papaparse": "^4.6.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "flow": "flow",
    "eslint": "eslint src",
    "proofread": "yarn flow && yarn eslint",
    "ci": "yarn proofread && CI=true yarn test --coverage"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    },
    "coverageReporters": ["text"]
  }
}
